<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsSelectActivity">


    <TextView
        android:id="@+id/txvNumberQuestions"
        android:textAlignment="center"
        android:gravity="center_vertical"

        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/lblNumberQuestions"
        app:layout_constraintBottom_toTopOf="@+id/txvCategory"
        />

    <TextView
        android:id="@+id/txvCategory"
        android:textAlignment="center"
        android:gravity="center_vertical"

        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/lblCategory"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        />

    <TextView
        android:id="@+id/txvDifficulty"
        android:textAlignment="center"
        android:gravity="center_vertical"

        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/lblDifficulty"
        app:layout_constraintTop_toBottomOf="@+id/txvCategory"

        />

    <TextView
        android:id="@+id/txvType"
        android:textAlignment="center"
        android:gravity="center_vertical"

        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/lblType"
        app:layout_constraintTop_toBottomOf="@+id/txvDifficulty"

        />

    <Spinner
        android:id="@+id/spnNumberQuestions"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/spnCategory"
        />

    <Spinner
        android:id="@+id/spnCategory"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        />

    <Spinner
        android:id="@+id/spnDifficulty"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/spnCategory"
        app:layout_constraintRight_toRightOf="parent"
        />
    <Spinner
        android:id="@+id/spnType"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/spnDifficulty"
        app:layout_constraintRight_toRightOf="parent"
        />
    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <Button
        android:id="@+id/btnBegin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnBegin"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:onClick="getQuiz"
         />

</android.support.constraint.ConstraintLayout>