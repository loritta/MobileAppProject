<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllResultsActivity"
    android:id="@+id/resultsTable"

    android:stretchColumns="*"
    >

    <TableRow android:layout_width="0dp">
        <TextView
            android:layout_span="3"
            android:text="@string/lblAllResultsHeader"
            android:textAlignment="center"
            />

    </TableRow>

    <TableRow android:layout_width="0dp">
        <TextView
            android:text="@string/lblUserEmail"
            android:textAlignment="center"
            />
        <TextView
            android:text="@string/lblQuizQuestions"
            android:textAlignment="center"
            />
        <TextView
            android:text="@string/lblQuizResults"
            android:textAlignment="center"
            />
    </TableRow>

</TableLayout>